{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "module": "ESNext",
    "target": "ES2020",
    "removeComments": false,
    "preserveConstEnums": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.mock.ts",
    "**/mock*.ts",
    "dist"
  ]
} 