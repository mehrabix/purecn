{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__tests__/**", 
    "**/__mocks__/**", 
    "**/*.test.ts", 
    "**/*.spec.ts", 
    "**/*.mock.ts",
    "**/mock*.ts",
    "node_modules", 
    "dist"
  ]
} 