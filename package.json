{
  "name": "purecn",
  "version": "1.0.2",
  "description": "Pure web components library with shadcn-like design",
  "main": "index.js",
  "type": "module",
  "bin": {
    "purecn": "dist/cli/index.js"
  },
  "exports": {
    ".": "./index.js",
    "./components/*": "./dist/components/*",
    "./cli": "./dist/cli/index.js",
    "./cli/utils": "./dist/cli/component-utils.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "node scripts/clean.js",
    "prebuild": "npm run clean",
    "build": "rspack build --config rspack.config.cjs --mode=production && npm run types",
    "dev": "node scripts/dev-server.js",
    "start": "node scripts/dev-server.js",
    "dev:server": "set NODE_ENV=development && rspack serve --config rspack.config.cjs --mode=development --hot",
    "types": "tsc --project tsconfig.declaration.json",
    "analyze": "rspack build --mode=production --analyze",
    "verify": "node scripts/verify-structure.js"
  },
  "keywords": [
    "web-components",
    "ui",
    "pure",
    "shadcn"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.3",
  "devDependencies": {
    "@rspack/cli": "^1.3.4",
    "@rspack/core": "^1.3.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "brotli-webpack-plugin": "^1.1.0",
    "chalk": "^5.4.1",
    "compression-webpack-plugin": "^11.1.0",
    "css-loader": "^6.11.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "sass": "^1.86.3",
    "sass-loader": "^16.0.5",
    "serve": "^14.2.4",
    "style-loader": "^3.3.4",
    "terser": "^5.29.2",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.3"
  },
  "files": [
    "dist",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/purecn.git"
  }
}
